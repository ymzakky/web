---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

export async function getStaticPaths() {
  const works = await getCollection('works');
  return works.map(work => ({
    params: { slug: work.slug },
    props: { work },
  }));
}

const { work } = Astro.props;
const { Content } = await work.render();
---

<BaseLayout title={work.data.title}>
  <article class="work-detail">
    <header class="work-header">
      <div class="header-bg">
        <img src={work.data.heroImage || "/assets/images/works_default.png"} alt="" />
        <div class="header-overlay"></div>
      </div>
      <div class="container header-content">
        <div class="work-meta-top">
          <span class="client-name">{work.data.client}</span>
          <span class="divider">/</span>
          <span class="industry">{work.data.industry}</span>
        </div>
        <h1 class="work-title">{work.data.title}</h1>
        
        <div class="work-attributes">
          <div class="attr-item">
            <span class="attr-label">所在地</span>
            <span class="attr-value">{work.data.location}</span>
          </div>
          <div class="attr-item">
            <span class="attr-label">従業員数</span>
            <span class="attr-value">{work.data.employees}</span>
          </div>
          {work.data.tools && (
            <div class="attr-item">
              <span class="attr-label">使用ツール</span>
              <div class="sc-tags">
                {work.data.tools.map(t => <span class="tag">{t}</span>)}
              </div>
            </div>
          )}
        </div>
      </div>
    </header>

    <div class="container work-content-container">
      <div class="content-body">
        <Content />
      </div>
      
      <div class="sidebar">
        {work.data.phase && (
          <div class="phase-widget glass-card">
            <h3>実施フェーズ</h3>
            <ul>
              {work.data.phase.map(p => <li>{p}</li>)}
            </ul>
          </div>
        )}
      </div>
    </div>
  </article>

  <div class="container back-link-container">
    <a href="/works" class="back-link">
      <span class="arrow">←</span> 事例一覧に戻る
    </a>
  </div>
</BaseLayout>

<style>
  .work-header {
    position: relative;
    padding: 120px 0 80px; /* Increased padding */
    margin-bottom: var(--spacing-xl);
    border-bottom: 1px solid rgba(0,0,0,0.05);
    background-color: var(--color-bg-dark); /* Fallback */
    color: #fff; /* Inverted text for dark overlay */
    overflow: hidden;
  }

  .header-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
  }

  .header-bg img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .header-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(180deg, rgba(6, 87, 0, 0.85) 0%, rgba(6, 87, 0, 0.95) 100%); /* Green tinted dark overlay */
    z-index: 1;
    backdrop-filter: blur(2px);
  }

  .header-content {
    position: relative;
    z-index: 2;
  }

  .work-meta-top {
    font-size: 0.9rem;
    color: rgba(255,255,255,0.8);
    margin-bottom: var(--spacing-sm);
    font-weight: 600;
  }
  
  .divider {
    margin: 0 0.5rem;
    color: var(--color-brand-accent);
  }

  .work-title {
    font-size: 2.5rem;
    color: #fff;
    margin-bottom: var(--spacing-lg);
    line-height: 1.2;
    font-family: var(--font-family-serif);
    text-shadow: 0 2px 4px rgba(0,0,0,0.2);
  }

  .work-attributes {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-xl);
    padding-top: var(--spacing-md);
    border-top: 1px solid rgba(255,255,255,0.2);
  }

  .attr-item {
    display: flex;
    flex-direction: column;
    gap: 0.3rem;
  }

  .attr-label {
    font-size: 0.75rem;
    color: rgba(255,255,255,0.7);
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  
  .attr-value {
    font-weight: 500;
  }

  .sc-tags {
    display: flex;
    gap: 0.5rem;
  }

  .tag {
    font-size: 0.75rem;
    background: #fff;
    color: var(--color-text-main);
    padding: 2px 8px;
    border-radius: 4px;
    border: 1px solid #ddd;
    box-shadow: 0 1px 2px rgba(0,0,0,0.05);
  }

  .work-content-container {
    display: grid;
    grid-template-columns: 1fr 280px;
    gap: var(--spacing-xl);
    align-items: start;
  }

  .content-body {
    line-height: 1.9;
    font-size: 1.05rem;
    color: var(--color-text-main);
  }

  .content-body h2 {
    font-size: 1.75rem;
    color: var(--color-brand-primary);
    margin: var(--spacing-xl) 0 var(--spacing-md);
    padding-bottom: var(--spacing-sm);
    border-bottom: 2px solid var(--color-brand-primary-light);
    font-family: var(--font-family-serif);
  }
  
  .content-body h2:first-child {
    margin-top: 0;
  }

  .content-body h3 {
    font-size: 1.35rem;
    margin: var(--spacing-lg) 0 var(--spacing-sm);
    color: var(--color-text-main);
  }

  .content-body ul {
    list-style: disc;
    padding-left: 1.5rem;
    margin-bottom: var(--spacing-md);
  }
  
  .content-body li {
    margin-bottom: 0.5rem;
  }

  .content-body blockquote {
    background: #fff;
    padding: var(--spacing-lg);
    border-left: 4px solid var(--color-brand-primary);
    margin: var(--spacing-lg) 0;
    font-style: italic;
    box-shadow: var(--shadow-sm);
    border-radius: 0 var(--border-radius-sm) var(--border-radius-sm) 0;
  }

  .sidebar {
    position: sticky;
    top: 100px;
  }

  .phase-widget {
    /* glass-card styles apply */
    padding: var(--spacing-lg);
    border-radius: var(--border-radius-md);
  }

  .phase-widget h3 {
    font-size: 1.1rem;
    margin-bottom: var(--spacing-md);
    border-bottom: 2px solid var(--color-brand-primary-light);
    padding-bottom: 0.5rem;
    color: var(--color-text-main);
    font-family: var(--font-family-serif);
  }

  .phase-widget ul {
    list-style: none;
    padding: 0;
  }

  .phase-widget li {
    padding: 0.6rem 0;
    border-bottom: 1px dashed rgba(0,0,0,0.1);
    display: flex;
    align-items: center;
    font-size: 0.95rem;
    color: var(--color-text-muted);
  }
  
  .phase-widget li:last-child {
    border-bottom: none;
  }
  
  .phase-widget li::before {
    content: "✓";
    color: var(--color-brand-primary);
    margin-right: 0.6rem;
    font-weight: bold;
  }
  
  .back-link-container {
    margin: var(--spacing-xl) auto;
    border-top: 1px solid var(--color-bg-muted);
    padding-top: var(--spacing-lg);
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    font-weight: 600;
    color: var(--color-text-muted);
    transition: color 0.2s;
  }
  
  .back-link:hover {
    color: var(--color-brand-primary);
  }
  
  .back-link .arrow {
    margin-right: 0.5rem;
    transition: transform 0.2s;
  }
  
  .back-link:hover .arrow {
    transform: translateX(-4px);
  }

  @media (max-width: 800px) {
    .work-content-container {
      grid-template-columns: 1fr;
    }
    .sidebar {
      order: -1;
      position: static;
      margin-bottom: var(--spacing-lg);
    }
    .work-title {
      font-size: 2rem;
    }
  }
</style>
