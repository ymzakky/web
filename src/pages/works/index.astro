---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

const allWorks = await getCollection('works');
---

<BaseLayout title="事例一覧">
  <section class="section">
    <div class="container">
      <div class="page-header">
        <h1 class="page-title text-gradient">Works</h1>
        <p class="page-subtitle">お客様との取り組み事例</p>
      </div>

      <div class="works-grid">
        {allWorks.map((work) => (
          <a href={`/works/${work.slug}`} class="work-card glass-card">
            <div class="work-card-image">
               <img src={work.data.heroImage || "/assets/images/works_default.png"} alt={work.data.title} />
            </div>
            <div class="work-card-content">
              <span class="client-name">{work.data.client}</span>
              <h2 class="work-title">{work.data.title}</h2>
              <p class="work-summary">{work.data.summary}</p>
              <div class="work-meta">
                {work.data.industry && <span class="tag">{work.data.industry}</span>}
                {work.data.location && <span class="tag">{work.data.location}</span>}
              </div>
            </div>
            <div class="card-arrow">→</div>
          </a>
        ))}
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .section {
    padding-top: var(--spacing-lg);
    padding-bottom: var(--spacing-xl);
  }

  .page-header {
    text-align: center;
    max-width: 800px;
    margin: 0 auto var(--spacing-xl);
  }

  .page-title {
    font-size: 3.5rem;
    font-family: var(--font-family-serif);
    margin-bottom: var(--spacing-sm);
    letter-spacing: 0.05em;
    line-height: 1.2;
  }

  .page-subtitle {
    font-size: 1.1rem;
    color: var(--color-text-muted);
    font-weight: 500;
  }

  .works-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: var(--spacing-md); /* Reduced gap for better cohesion */
    align-items: start;
  }

  .work-card {
    display: flex;
    flex-direction: column;
    padding: 0;
    border-radius: var(--border-radius-lg);
    transition: transform 0.3s cubic-bezier(0.2, 0.8, 0.2, 1), box-shadow 0.3s ease;
    text-decoration: none;
    position: relative;
    overflow: hidden;
    height: 100%;
    background: #fff; /* Ensure solid background for readability if glass effect is too subtle */
    border: 1px solid rgba(0,0,0,0.05); /* Subtle border */
  }

  .work-card-image {
    width: 100%;
    aspect-ratio: 16/9; /* Consistent aspect ratio */
    height: auto;
    overflow: hidden;
    background-color: var(--color-bg-muted);
    border-bottom: 1px solid rgba(0,0,0,0.03);
  }

  .work-card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s ease;
  }

  .work-card:hover .work-card-image img {
    transform: scale(1.08); /* Smoother zoom */
  }

  .work-card-content {
    padding: var(--spacing-md);
    display: flex;
    flex-direction: column;
    flex-grow: 1;
  }

  .work-card:hover {
    transform: translateY(-6px); /* Slightly refined lift */
    box-shadow: var(--shadow-float);
    border-color: rgba(11, 164, 0, 0.2);
  }

  /* Decorative line on hover */
  .work-card::after {
    content: "";
    position: absolute;
    bottom: 0; 
    left: 0;
    width: 100%;
    height: 4px; /* Bottom accent instead of left side for card unity */
    background: var(--gradient-brand);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .work-card:hover::after {
    opacity: 1;
  }

  .client-name {
    display: block;
    font-size: 0.8rem;
    font-weight: 700;
    color: var(--color-brand-primary);
    margin-bottom: 0.5rem;
    letter-spacing: 0.05em;
    text-transform: uppercase;
  }

  .work-title {
    font-size: 1.35rem;
    margin-bottom: 1rem;
    color: var(--color-text-main);
    line-height: 1.4;
    transition: color 0.2s ease;
    font-family: var(--font-family-base); /* Ensure readability */
  }
  
  .work-card:hover .work-title {
    color: var(--color-brand-dark); /* Darker green on hover */
  }

  .work-summary {
    font-size: 0.95rem;
    color: var(--color-text-muted);
    margin-bottom: 1.5rem;
    line-height: 1.7;
    flex-grow: 1; /* Pushes meta tags down */
  }

  .work-meta {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: auto; /* Ensures tags align at bottom */
  }

  .tag {
    font-size: 0.75rem;
    padding: 0.25rem 0.75rem;
    background: var(--color-bg-muted);
    border-radius: 4px; /* More distinct tag shape */
    color: var(--color-text-muted);
    font-weight: 500;
  }
  
  .card-arrow {
    position: absolute;
    bottom: var(--spacing-md);
    right: var(--spacing-md);
    font-size: 1.2rem;
    color: var(--color-brand-primary);
    opacity: 0;
    transform: translateX(-10px);
    transition: all 0.3s ease;
  }
  
  .work-card:hover .card-arrow {
    opacity: 1;
    transform: translateX(0);
  }

  @media (max-width: 768px) {
    .page-title {
      font-size: 2.5rem;
    }
    
    .section {
      padding-top: var(--spacing-md);
    }
  }
