.client-link { color: var(--color-brand-primary); font-weight: 600; display: flex; align-items: center; gap: 0.5rem; }
.client-link:hover { text-decoration: underline; }
.badge { font-size: 0.68rem; background: var(--color-brand-primary); color: #fff; padding: 2px 6px; border-radius: 3px; font-weight: 600; }
.client-note { font-size: 0.82rem; color: var(--color-text-muted); font-style: italic; }

/* ===== Seminar ===== */
.seminar-list { display: flex; flex-direction: column; gap: 1rem; max-width: 700px; }
.seminar-item {
  display: grid;
  grid-template-columns: 110px 1fr;
  gap: 1.5rem;
  padding: 1.25rem;
  background: #fff;
  border-radius: 10px;
  border: 1px solid rgba(0,0,0,0.05);
  box-shadow: var(--shadow-sm);
