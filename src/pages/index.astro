    }
  };

  const backdrop = document.getElementById('certModalBackdrop')!;
  const modal = document.getElementById('certModal')!;
  const closeBtn = document.getElementById('certModalClose')!;
  const levelEl = document.getElementById('certModalLevel')!;
  const titleEl = document.getElementById('certModalTitle')!;
  const descEl = document.getElementById('certModalDesc')!;

  function openModal(certId: string) {
    const data = certData[certId];
    if (!data) return;
    levelEl.textContent = data.level;
    levelEl.className = 'cert-level' + (data.levelClass ? ' ' + data.levelClass : '');
    titleEl.textContent = data.title;
    descEl.textContent = data.desc;
    backdrop.setAttribute('aria-hidden', 'false');
    backdrop.classList.add('is-open');
    closeBtn.focus();
  }

  function closeModal() {
    backdrop.classList.remove('is-open');
    backdrop.setAttribute('aria-hidden', 'true');
  }

  document.querySelectorAll('[data-cert]').forEach((btn) => {
