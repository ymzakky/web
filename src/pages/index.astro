  margin-bottom: 0.8rem;
}
.client-record-item {
  display: inline-flex;
  align-items: center;
  gap: 0.4rem;
  font-size: 0.85rem;
  color: var(--color-text-sub);
  background: var(--color-bg-body);
  border: 1px solid rgba(0,0,0,0.08);
  border-radius: 99px;
  padding: 0.35rem 0.95rem;
