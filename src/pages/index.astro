.two-col { display: grid; grid-template-columns: 1fr 1fr; gap: 1.5rem; }
.about-card {
  background: #fff;
  border-radius: 16px;
  padding: 2.5rem;
  box-shadow: var(--shadow-sm);
  border: 1px solid rgba(0,0,0,0.05);
}
