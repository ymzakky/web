.about-profile-col .creed-list { display: flex; flex-direction: column; gap: 0.6rem; }
.about-profile-col .creed-item {
  font-size: 0.97rem;
  font-weight: 700;
  color: var(--color-text-main);
  line-height: 1.7;
  padding: 1rem 1.25rem;
