.story-title { font-size: 1.05rem; color: var(--color-brand-primary); margin-bottom: 1.25rem; padding-left: 1rem; border-left: 4px solid var(--color-brand-primary); line-height: 1.5; }
.story-body p { font-size: 0.92rem; color: var(--color-text-sub); line-height: 2; margin-bottom: 1rem; text-align: justify; }
.story-body p:last-child { margin-bottom: 0; }

