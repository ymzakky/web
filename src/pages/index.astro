.client-record {
  margin-top: 2.5rem;
  padding-top: 2.5rem;
  border-top: 2px solid var(--color-bg-muted);
}
.client-record-title {
  font-size: 1.05rem;
  font-weight: 700;
  color: var(--color-text-sub);
