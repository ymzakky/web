.cert-detail-header h4 { font-size: 0.95rem; font-weight: 700; margin: 0; color: var(--color-text-main); }
.cert-level {
  font-size: 0.65rem;
  font-weight: 700;
  letter-spacing: 0.06em;
  padding: 0.15rem 0.55rem;
  border-radius: 3px;
  background: rgba(0,0,0,0.06);
  color: var(--color-text-muted);
  border: 1px solid rgba(0,0,0,0.08);
