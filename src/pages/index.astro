.info-row ul { list-style: disc; padding-left: 1.2rem; }
.info-row li { margin-bottom: 0.2rem; }
.client-list { list-style: none; }
.client-list li { padding: 0.55rem 0; border-bottom: 1px solid rgba(0,0,0,0.05); font-size: 0.9rem; color: var(--color-text-sub); }
